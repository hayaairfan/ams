@using AttendanceSystem.Core.Models
@model List<Attendance>

@{
    ViewData["Title"] = "My Attendance";
}

<div class="container-fluid mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/Student/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-check"></i> My Attendance Record
            </h4>
        </div>
        <div class="card-body">
            @if (ViewBag.Total != null)
            {
                <!-- Attendance Summary -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center bg-primary text-white">
                            <div class="card-body">
                                <h5>Total Classes</h5>
                                <h2 class="display-5">@ViewBag.Total</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-success text-white">
                            <div class="card-body">
                                <h5>Present</h5>
                                <h2 class="display-5">@ViewBag.Present</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-warning text-dark">
                            <div class="card-body">
                                <h5>Late</h5>
                                <h2 class="display-5">@ViewBag.Late</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-danger text-white">
                            <div class="card-body">
                                <h5>Absent</h5>
                                <h2 class="display-5">@ViewBag.Absent</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Attendance Percentage -->
                <div class="text-center mb-4">
                    <h5>Overall Attendance: <span class="text-primary fw-bold">@ViewBag.AttendancePercentage%</span></h5>
                    <div class="progress mt-2" style="height: 25px;">
                        <div class="progress-bar bg-primary" style="width: @ViewBag.AttendancePercentage%">
                            @ViewBag.AttendancePercentage%
                        </div>
                    </div>
                </div>
            }

            <!-- Attendance Details -->
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Course</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-info">@a.CourseCode</span></td>
                                    <td>@a.Date.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (a.Status == "Present")
                                        {
                                            <span class="badge bg-success">Present</span>
                                        }
                                        else if (a.Status == "Late")
                                        {
                                            <span class="badge bg-warning text-dark">Late</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Absent</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x" style="font-size: 4rem; color: #ccc;"></i>
                    <h5 class="mt-3 text-muted">No attendance records yet.</h5>
                </div>
            }
        </div>
    </div>
</div>