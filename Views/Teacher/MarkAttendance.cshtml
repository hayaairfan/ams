@using AttendanceSystem.Core.Models
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="container-fluid mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/Teacher/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-gradient-success text-white py-4">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-calendar-check me-2"></i> Mark Attendance
            </h3>
        </div>

        <div class="card-body p-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success d-flex align-items-center mb-4">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    <div>@TempData["Success"]</div>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <!-- Class Selection -->
            <form method="get" asp-action="MarkAttendance">
                <div class="mb-4">
                    <label class="form-label fw-bold">Select Today's Class</label>
                    <select name="courseCode" class="form-select" onchange="this.form.submit()">
                        <option value="">Choose a scheduled class for today</option>
                        @{
                            var timetables = ViewBag.Timetables as List<Timetable>;
                            if (timetables != null)
                            {
                                foreach (var t in timetables)
                                {
                                    <option value="@t.CourseCode">
                                        @t.CourseCode — @(Enum.GetName(typeof(DayOfWeek), t.DayOfWeek)),
                                        @t.StartTime.ToString(@"hh\:mm")–@t.EndTime.ToString(@"hh\:mm") [@t.Room]
                                    </option>
                                }
                            }
                        }
                    </select>
                </div>
            </form>

            <!-- Attendance Form -->
            @if (ViewBag.CourseCode != null)
            {
                <form method="post" asp-action="SaveAttendance">
                    <input type="hidden" name="courseCode" value="@ViewBag.CourseCode" />
                    <input type="hidden" name="date" value="@ViewBag.Date" />

                    <h5 class="mb-3">
                        Attendance for: <span class="text-primary">@ViewBag.CourseCode</span> |
                        Date: @ViewBag.Date
                    </h5>

                    @{
                        var students = ViewBag.Students as List<string> ?? new List<string>();
                        var existing = ViewBag.ExistingAttendance as Dictionary<string, string> ?? new Dictionary<string, string>();
                    }

                    @if (students.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Student Email</th>
                                        <th>Attendance Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < students.Count; i++)
                                    {
                                        var email = students[i];
                                        var currentStatus = existing.ContainsKey(email) ? existing[email] : "Absent";
                                        <tr>
                                            <td>@email</td>
                                            <td>
                                                <select name="statusList[@i]" class="form-select w-auto">
                                                    <option value="Present" selected="@(currentStatus == "Present")">✓ Present</option>
                                                    <option value="Late" selected="@(currentStatus == "Late")">🕗 Late</option>
                                                    <option value="Absent" selected="@(currentStatus == "Absent")">✗ Absent</option>
                                                </select>
                                                <input type="hidden" name="studentEmails[@i]" value="@email" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Teacher/Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save me-1"></i> Save Attendance
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            No students enrolled in this course.
                        </div>
                    }
                </form>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x fs-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No classes scheduled for today</h5>
                    <p class="text-muted">
                        Make sure:
                        <ul class="text-start">
                            <li>Timetable is added (Admin > Manage Timetable)</li>
                            <li>Today is the scheduled day (e.g., Thursday)</li>
                            <li>Course is assigned to you</li>
                        </ul>
                    </p>
                </div>
            }
        </div>
        <!-- TEMPORARY DEBUG -->
        <div class="alert alert-info mt-3">
            <strong>Raw SQL Result:</strong><br />
            @{
                var rawTimetables = ViewBag.Timetables as List<Timetable>;
                if (rawTimetables != null)
                {
                    foreach (var t in rawTimetables)
                    {
                        <div>
                            @t.CourseCode — @(Enum.GetName(typeof(DayOfWeek), t.DayOfWeek)) —
                            @t.StartTime.ToString(@"hh\:mm")–@t.EndTime.ToString(@"hh\:mm")
                        </div>
                    }
                }
                else
                {
                    <div>No classes found via raw SQL.</div>
                }
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #1cc88a, #13855c);
    }
</style>