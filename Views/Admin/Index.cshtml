@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="bi bi-person-gear"></i> Admin Dashboard
    </h2>
    <a href="/Admin/AssignStudentsToSections" class="btn btn-outline-purple w-100 mb-2">
        <i class="bi bi-person-badge"></i> Assign Students to Sections
    </a>
    <a href="/Admin/ManageTimetable" class="btn btn-outline-success w-100 mb-2">
        <i class="bi bi-calendar-week"></i> Manage Timetable
    </a>

    <!-- User Management -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-people-fill"></i> User Management
        </div>
        <div class="card-body">
            <p>Add and manage Admins, Teachers, and Students.</p>
            <a href="/Admin/ManageUsers" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add User
            </a>
        </div>
    </div>

    <!-- Academic Setup -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-info">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-calendar-week"></i> Sections
                </div>
                <div class="card-body d-flex flex-column">
                    <p>Assign sections to sessions (e.g., Fall 2025).</p>
                    <a href="/Admin/ManageSections" class="btn btn-primary mt-auto">
                        <i class="bi bi-plus-circle"></i> Add Section
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-warning">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-book"></i> Courses
                </div>
                <div class="card-body d-flex flex-column">
                    <p>Assign teachers to courses.</p>
                    <a href="/Admin/ManageCourses" class="btn btn-warning mt-auto">
                        <i class="bi bi-plus-circle"></i> Add Course
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-person-check"></i> Enrollments
                </div>
                <div class="card-body d-flex flex-column">
                    <p>Assign courses to students.</p>
                    <a href="/Admin/EnrollStudents" class="btn btn-success mt-auto">
                        <i class="bi bi-plus-circle"></i> Enroll Student
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reporting -->
    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-graph-up-arrow"></i> Reporting & Analytics
        </div>
        <div class="card-body">
            <p>Generate attendance reports with filtering and export.</p>
            <a href="/Admin/Reports" class="btn btn-danger">
                <i class="bi bi-file-earmark-spreadsheet"></i> View Reports
            </a>
        </div>
    </div>

    <!-- Logout -->
    <div class="text-end">
        <a href="/Home/Logout" class="btn btn-outline-secondary">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>