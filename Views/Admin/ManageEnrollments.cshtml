@using AttendanceSystem.Core.Models
@{
    ViewData["Title"] = "Manage Enrollments";
    var students = ViewBag.Students as List<User> ?? new List<User>();
    var courses = ViewBag.Courses as List<Course> ?? new List<Course>();
    var enrollments = ViewBag.Enrollments as List<Enrollment> ?? new List<Enrollment>();
}

<div class="container-fluid mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/Admin/Index" class="btn btn-outline-secondary px-3 py-2">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Enroll Student Card -->
    <div class="card border-0 shadow-sm rounded-3 mb-4">
        <div class="card-header bg-gradient-success text-white fw-bold py-3">
            <i class="bi bi-person-plus me-2"></i> Enroll Student in Course
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger d-flex align-items-start mb-3">
                    <i class="bi bi-exclamation-triangle-fill fs-5 me-2 mt-0.5"></i>
                    <div>@ViewBag.Error</div>
                </div>
            }
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success d-flex align-items-start mb-3">
                    <i class="bi bi-check-circle-fill fs-5 me-2 mt-0.5"></i>
                    <div>@ViewBag.Success</div>
                </div>
            }

            <form method="post" asp-action="EnrollStudent" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-md-5">
                    <label class="form-label fw-semibold text-dark">👤 Student</label>
                    <select name="studentEmail" class="form-select form-select-lg" required>
                        <option value="">Select a student</option>
                        @foreach (var s in students)
                        {
                            <option value="@s.Email">@s.Email</option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label class="form-label fw-semibold text-dark">📘 Course</label>
                    <select name="courseCode" class="form-select form-select-lg" required>
                        <option value="">Select a course</option>
                        @foreach (var c in courses)
                        {
                            <option value="@c.Code">@c.Code — @c.Title</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                        <i class="bi bi-person-plus me-1"></i> Enroll
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Current Enrollments Card -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-light text-muted fw-bold py-3">
            <i class="bi bi-people me-2 text-info"></i> Current Enrollments (@enrollments.Count)
        </div>
        <div class="card-body p-0">
            @if (!enrollments.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-person-x fs-1"></i>
                    <p class="mt-2 mb-0">No enrollments found</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Student Email</th>
                                <th>Course</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in enrollments)
                            {
                                <tr>
                                    <td class="align-middle">@e.StudentEmail</td>
                                    <td class="align-middle fw-bold text-primary">@e.CourseCode</td>
                                    <td class="align-middle text-end">
                                        <form asp-action="UnenrollStudent" method="post" class="d-inline" onsubmit="return confirm('Unenroll @e.StudentEmail from @e.CourseCode?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="enrollmentId" value="@e.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger px-2">
                                                <i class="bi bi-person-x me-1"></i> Unenroll
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #10b981, #059669) !important;
        color: white;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.4rem 1.2rem rgba(0, 0, 0, 0.12);
        }

    .btn-success {
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        color: white;
    }

        .btn-success:hover {
            opacity: 0.95;
            transform: translateY(-2px);
        }
</style>