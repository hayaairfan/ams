@using AttendanceSystem.Core.Models
@model List<AttendanceReport>

@{
    ViewData["Title"] = "Attendance Reports";
}

<div class="container-fluid mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/Admin/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-file-bar-graph"></i> Attendance Reports
            </h4>
        </div>
        <div class="card-body">
            <!-- Filter Form -->
            <form method="get" class="row g-3 mb-4 p-3 border rounded bg-light">
                <!-- Course Dropdown -->
                <div class="col-md-3">
                    <label class="form-label">Course</label>
                    <select name="courseCode" class="form-select">
                        <option value="">All Courses</option>
                        @{
                            var courses = ViewBag.Courses as List<AttendanceSystem.Core.Models.Course>;
                        }
                        @if (courses != null)
                        {
                            @foreach (var course in courses)
                            {
                                <option value="@course.Code">@course.Code - @course.Title</option>
                            }
                        }
                    </select>
                </div>

                <!-- Student Dropdown -->
                <div class="col-md-3">
                    <label class="form-label">Student</label>
                    <select name="studentEmail" class="form-select">
                        <option value="">All Students</option>
                        @{
                            var students = ViewBag.Students as List<AttendanceSystem.Core.Models.User>;
                        }
                        @if (students != null)
                        {
                            @foreach (var student in students)
                            {
                                <option value="@student.Email">@student.Email</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">From</label>
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">To</label>
                    <input type="date" name="endDate" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filter
                    </button>
                </div>
            </form>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Student</th>
                                <th>Course</th>
                                <th>Total</th>
                                <th>Present</th>
                                <th>Late</th>
                                <th>Absent</th>
                                <th>Attendance %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.StudentEmail</td>
                                    <td><span class="badge bg-info">@r.CourseCode</span></td>
                                    <td>@r.TotalClasses</td>
                                    <td><span class="badge bg-success">@r.Present</span></td>
                                    <td><span class="badge bg-warning text-dark">@r.Late</span></td>
                                    <td><span class="badge bg-danger">@r.Absent</span></td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-primary" style="width: @(r.Percentage)%;">
                                                @r.Percentage%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Export Buttons -->
                <div class="text-end mt-3">
                    <a href="/Admin/ExportReports?
                            courseCode=@Context.Request.Query["courseCode"]&
                            studentEmail=@Context.Request.Query["studentEmail"]&
                            startDate=@Context.Request.Query["startDate"]&
                            endDate=@Context.Request.Query["endDate"]"
                       class="btn btn-success me-2">
                        <i class="bi bi-download"></i> Export to CSV
                    </a>
                    <a href="/Admin/ExportPdf?
                            courseCode=@Context.Request.Query["courseCode"]&
                            studentEmail=@Context.Request.Query["studentEmail"]&
                            startDate=@Context.Request.Query["startDate"]&
                            endDate=@Context.Request.Query["endDate"]"
                       class="btn btn-danger">
                        <i class="bi bi-file-earmark-pdf"></i> Export to PDF
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-text" style="font-size: 4rem; color: #ccc;"></i>
                    <h5 class="mt-3 text-muted">No attendance records found.</h5>
                </div>
            }
        </div>
    </div>
</div>