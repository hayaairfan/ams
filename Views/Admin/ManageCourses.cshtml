@{
    ViewData["Title"] = "Manage Courses";
}

<div class="container-fluid mt-4">
    <!-- Back Button -->
    <div class="mb-4">
        <a href="/Admin/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-journal-plus"></i> Add New Course
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    <form method="post" asp-action="AddCourse">
                        <div class="mb-3">
                            <label class="form-label">Course Code</label>
                            <input type="text" name="code" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Course Title</label>
                            <input type="text" name="title" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Assign Teacher</label>
                            <select name="teacherEmail" class="form-select" required>
                                <option value="">Select Teacher</option>
                                @foreach (var email in ViewBag.Teachers as List<string>)
                                {
                                    <option value="@email">@email</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-save"></i> Add Course
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Course Guidelines
                    </h5>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Course code must be unique (e.g., <code>CS101</code>)</li>
                        <li>Only registered teachers can be assigned</li>
                        <li>Students enroll in courses, not sections</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>